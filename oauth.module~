/**
 * Implementation of hook_help().
 */
function oauth_help($path, $arg) {
  switch ($path) {
    case 'admin/help#oauth':
      return '<p>'. t('Visit the <a href="@handbook_url">OAuth Handbook</a> for help and information.', array('@handbook_url' => 'http://drupal.org/node/')) .'</p>';
    
    case 'admin/build/oauth/testoauth':
      $output = '<p>'.t('Here you can test your registered application by producing test oauth tokens and making test calls to server. For more detailed tutorials and flow diagrams visit <a href="@handbook_url">OAuth Handbook</a>. Fortunately you may get <a href="@oauth_video_tuts"> video tutorials</a> here.', 
	array('handbook_url' => 'http://drupal.org/node/', 'oauth_video_tuts' => 'http://sumitk.net/node'')).'</p>';	
      return $output;	
    case 'admin/build/oauth/registered':
      $output = '<p>'. t('These are users/services which have registered for use of OAuth on your website, you can delete or edit these registered applications here') .'</p>';
	return $output;
    case 'admin/build/oauth/registered/register':
      $output .= '<p>'. t('Here you can edit OR add a new application(cool-auth registration) corresponding to UID of an already registered user.') .'</p>';      return $output;
      
    case 'admin/build/services/keys':
      return t('An API key is required to allow an application to access Drupal remotely.');
      
  }
}
